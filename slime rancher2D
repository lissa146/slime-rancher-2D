    py += vy

    if mapNum == 1:
        p1.move(keys, map)
   
    
    screen.fill(WHITE)

    #screen.blit(screen, grass2)
    if state == 1:
        
        
            
            #print(p1.vx, p1.vy, p1.xpos, p1.ypos)
        if mapNum == 1:    #map
            for i in range(len(map)):
                for j in range(len(map[i])):
                    if map[i][j] == 1:
                        screen.blit(grass2, (j * 50, i * 50), (0, 0, 50, 50))
                    if map[i][j] == 2:
                        screen.blit(grass2, (j * 50, i * 50), (0, 0, 50, 50))
                    if map[i][j] == 3:
                        screen.blit(grass2, (j * 50, i * 50), (0, 0, 50, 50))
                    if map[i][j] == 5:
                        screen.blit(grass2, (j * 50, i * 50), (0, 0, 50, 50))
        
        p1.draw(screen) 

    pygame.display.flip()

pygame.quit()
