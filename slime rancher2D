grass2 = pygame.image.load('grass2.jpg')



while True: #GAME LOOP ###############################################################
    clock.tick(60)
    
    #even handling-------------------------------------
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            
        keys = pygame.key.get_pressed()
    #Physics section--------------------------------------------------
    
    #Player input
    
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_LEFT or keys[pygame.K_a]:
                keys[0] = True
            else:
                keys[0] = False


            if event.key == pygame.K_RIGHT or keys[pygame.K_d]:
                keys[1] = True
            else:
                keys[1] = False

            if event.key == pygame.K_UP or keys[pygame.K_w]:
                keys[2] = True
            else:
                keys[2] = False
            if event.key == pygame.K_DOWN or keys[pygame.K_s]:
                keys[3] = True
            else:
                keys[3] = False

    #elif event.type == pygame.KEYUP:
        #if event.key == pygame.K_LEFT or event.key == ord('a'):
            
        #if event.key == pygame.K_RIGHT or event.key == ord('d'):
            #print('right stop')    
  
